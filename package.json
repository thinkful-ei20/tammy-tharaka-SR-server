    "knex": "^0.14.6",
    "mongoose": "^5.2.2",
    "morgan": "^1.9.0",
    "nodemon": "^1.17.5",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "passport-local": "^1.0.0",
    "pg": "^7.4.3"
  },
  "devDependencies": {
